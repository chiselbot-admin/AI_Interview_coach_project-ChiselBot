{{> layout/header }}
<body id="page-top">
<div id="wrapper">
    {{> layout/sidebar }}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            {{> layout/topbar }}

            <!-- 메인 콘텐츠 -->
            <div class="container mt-5">
                <h2 class="mb-4 text-center fw-bold">답변 작성</h2>

                <div class="card shadow-sm p-4 mb-4">
                    <div class="mb-3">
                        <label class="fw-bold">문의 제목</label>
                        <p class="form-control-plaintext border rounded p-2 bg-light">{{inquiry.title}}</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">문의 내용</label>
                        <div class="border rounded p-3 bg-light" style="min-height:150px;">
                            {{inquiry.content}}
                        </div>
                    </div>

                    <form action="/admin/inquiry/{{inquiry.inquiryId}}/answer" method="post">
                        <div class="mb-3">
                            <label class="fw-bold">답변 내용</label>
                            <textarea name="content" class="form-control" rows="5" placeholder="답변 내용을 입력하세요" required></textarea>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-success">등록</button>
                            <a href="/admin/inquiries/{{inquiry.inquiryId}}" class="btn btn-secondary ms-2">취소</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{> layout/footer }}
    </div>
</div>

<style>
    body { background-color: #f8f9fa; }
    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
